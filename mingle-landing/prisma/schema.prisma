generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subscriber {
  id           String   @id @default(cuid())
  email        String   @unique
  feedback     String?
  ipAddress    String?
  userAgent    String?
  language     String?
  pageLanguage String?
  referrer     String?
  fullUrl      String?
  queryParams  String?
  screenWidth  Int?
  screenHeight Int?
  timezone     String?
  platform     String?
  pathname     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ButtonClick {
  id           String   @id @default(cuid())
  buttonType   String // "nav", "hero", "cta"
  ipAddress    String?
  userAgent    String?
  language     String? // browser language
  referrer     String?
  screenWidth  Int?
  screenHeight Int?
  timezone     String?
  platform     String?
  createdAt    DateTime @default(now())
}

model DemoConversation {
  id                String   @id @default(cuid())
  ipAddress         String?
  userAgent         String?
  utterances        Json // Array of { originalText, originalLang, translations }
  selectedLanguages String[]
  usageSec          Int?
  createdAt         DateTime @default(now())
}

model Visitor {
  id           String   @id @default(cuid())
  ipAddress    String?
  userAgent    String?
  language     String? // browser language
  pageLanguage String? // i18n detected language
  referrer     String?
  screenWidth  Int?
  screenHeight Int?
  timezone     String?
  platform     String?
  pathname     String? // URL path (e.g., /ko, /ja)
  createdAt    DateTime @default(now())
}

model EventLog {
  id           String   @id @default(cuid())
  eventType    String // "visit", "click", "subscribe", "demo_conversation"
  ipAddress    String?
  userAgent    String?
  language     String? // browser language
  pageLanguage String? // i18n detected language
  referrer     String?
  fullUrl      String? // full URL including protocol and domain
  queryParams  String? // query string (e.g., "?utm_source=instagram&utm_medium=ad")
  pathname     String? // URL path (e.g., /ko, /ja/flirting)
  screenWidth  Int?
  screenHeight Int?
  timezone     String?
  platform     String?
  metadata     Json? // flexible field for event-specific data (e.g., buttonType, email, utterances)
  createdAt    DateTime @default(now())

  @@index([eventType])
  @@index([createdAt])
  @@index([ipAddress])
}
