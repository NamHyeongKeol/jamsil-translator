# Core auth
AUTH_SECRET=

# Google OAuth
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Apple OAuth
# client id (Service ID for web Sign in with Apple)
AUTH_APPLE_ID=

# Option A: provide pre-generated client secret JWT directly
AUTH_APPLE_SECRET=

# Option B: provide key materials and let server generate AUTH_APPLE_SECRET
AUTH_APPLE_TEAM_ID=
AUTH_APPLE_KEY_ID=
# Paste p8 content with escaped newlines, for example:
# AUTH_APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
AUTH_APPLE_PRIVATE_KEY=
# optional (max 15552000 = 180 days), default: 15465600 (179 days)
AUTH_APPLE_CLIENT_SECRET_TTL_SECONDS=15465600

# NextAuth / app URLs
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# RN runtime
NEXT_PUBLIC_WS_URL=ws://127.0.0.1:3001
NEXT_PUBLIC_API_NAMESPACE=ios/v1.0.0
