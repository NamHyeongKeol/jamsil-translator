# Auth.js / NextAuth
AUTH_SECRET=replace_with_long_random_string
AUTH_GOOGLE_ID=your_google_oauth_client_id
AUTH_GOOGLE_SECRET=your_google_oauth_client_secret

# Optional: base URL in production
# NEXTAUTH_URL=https://your-domain.com

# Database (Supabase/Postgres)
# Use the same database as mingle-landing, but point this app to the `app` schema.
# Example: postgresql://USER:PASSWORD@HOST:6543/postgres?schema=app
DATABASE_URL=postgresql://replace_with_supabase_url?schema=app

# Optional direct connection (recommended for migrations/introspection)
# Example: postgresql://USER:PASSWORD@HOST:5432/postgres?schema=app
DIRECT_URL=postgresql://replace_with_supabase_direct_url?schema=app

# Native iOS TTS backend mode: auto | on | off
# auto: use native AVAudioPlayer only on iOS Capacitor runtime
NEXT_PUBLIC_NATIVE_TTS_MODE=auto

# Native iOS STT backend mode: auto | on | off
# auto: use native AVAudioEngine + native WS only on iOS Capacitor runtime
NEXT_PUBLIC_NATIVE_STT_MODE=auto
